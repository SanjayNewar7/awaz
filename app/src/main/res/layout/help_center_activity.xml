<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_primary">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_primary"
        android:padding="36dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_white"
            android:layout_marginStart="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Help Center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <!-- Main Layout to Separate Scrollable and Fixed Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Scrollable Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <!-- Welcome Message -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to AWAZ, a citizen grievance reporting platform designed to help users raise local issues directly to the concerned municipal authorities. By using the AWAZ application, you agree to comply with and be bound by the following terms and conditions."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:lineSpacingMultiplier="1.1"
                        android:layout_marginBottom="16dp" />

                    <!-- FAQ 1 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. How do I post a complaint?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap the + Raise issue icon on the bottom bar. Fill in the title, description, and add a photo. Select your location and hit Post."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- FAQ 2 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. What do the 5 feedback options mean?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="When viewing a post, you can vote:\n- Support – You agree with the complaint.\n- Updated – You’re directly impacted.\n- Ensure – You’re uncertain or need more info.\n- Invalid – You think the issue is fake or misleading.\n- Fixed – The problem has been resolved."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- FAQ 3 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Can I use Awaz without an account?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes, you can browse complaints, but posting or voting requires signing up for a general public account."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- FAQ 4 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Why should I verify my identity?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verifying your identity with a Citizenship/National ID builds trust and gives your posts higher credibility. It also unlocks access to future features."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- FAQ 5 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="5. Is my data safe?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes, we follow strict privacy and security policies. Your personal data and documents are never shared publicly."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- FAQ 6 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. I submitted a complaint but don’t see it. Why?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ensuring no offensive content. Verifying data integrity (within minutes). If it’s still not showing, please contact support."
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- How to Contact Support -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How do I contact support?"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📧 Email: support@awazapp.com\n📞 Phone: +977-9800000000\n⏰ Available: Sunday to Friday, 10 AM – 6 PM"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
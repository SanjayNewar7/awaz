<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />


        <!-- OTP Illustration -->
        <ImageView
            android:id="@+id/imageIllustration"
            android:layout_width="260dp"
            android:layout_height="265dp"
            android:src="@drawable/otp_illustration"
            android:contentDescription="OTP Illustration"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the 6-digit code sent to your phone number"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="24dp" />

        <!-- OTP Fields -->
        <LinearLayout
            android:id="@+id/otpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:weightSum="6"
            android:paddingHorizontal="8dp">

            <!-- Repeat this EditText 6 times -->
            <EditText
                android:id="@+id/otp1"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp5"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/otp6"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:maxLength="1"
                android:inputType="number"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded_blue"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="24dp" />

        <!-- Resend Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive the code? "
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/textResendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send again"
                android:textColor="@color/blue_primary"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

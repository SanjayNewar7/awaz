<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when password is visible (toggle enabled) -->
    <item android:state_checked="true">
        <bitmap android:src="@drawable/visibility_off" android:gravity="center" />
    </item>
    <!-- State when password is hidden (toggle disabled) -->
    <item android:state_checked="false">
        <bitmap android:src="@drawable/visibility_on" android:gravity="center" />
    </item>
</selector>